import numbered_list as n
import String_List as s
def main():
    """ main function in main.py to call other functions"""
    
    print("Welcome to the list sorter!")
    print("Please make a selection from the following options!")
    print("Enter 1 to sort a numbered list")
    choice = int(input("Enter 2 to sort a list of strings: "))
    if choice == 1:
       n.numbered_list()
    elif choice == 2:
        s.string_list()
    else:
        print("Goodbye!")
main()


def numbered_list():
    numbers = []
    values = int(input("How many values would you like to enter: "))
    
    for i in range(values):

        entry = input("enter element #"+str(i)+": ")
        numbers.append(int(entry))
        print(numbers)
        
    list.sort(numbers)
    
    print("Your list sorted from smallest to larger is")
    print("----------------------------")
    print(numbers)
    
    
    unique_list = (numbers)
    print("The unique numbers in your list are")
    for i in unique_list:
        if i in unique_list:
            unique_list.remove(i)
    print(unique_list)
    
    
    def string_list():
    string_list = []
    values = int(input("How many values would you like to enter: "))
    
    for i in range(values):

        entry = input("enter element #"+str(i)+": ")
        string_list.append(entry)
        print(string_list)
        
    list.sort(string_list)
    
    print("Your list sorted from smallest to larger is")
    print("----------------------------")
    print(string_list)
    
    list.sort(string_list)
     
    unique_list = []
    print("The unique numbers in your list are")
    for i in string_list:
        if i not in unique_list:
            unique_list.append(i)
    print(unique_list)
